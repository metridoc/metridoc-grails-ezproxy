<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

    <changeSet id="validation-01" author="Tommy Barker" dbms="mysql, h2">
        <createTable tableName="validation_errors">
            <column name="id" type="BIGINT UNSIGNED" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="file_name" type="varchar(100)"/>
            <column name="record_index" type="int"/>
            <column name="scope" type="varchar(50)"/>
            <column name="record" type="text"/>
            <column name="error_message" type="text"/>
            <column name="stack_trace" type="text"/>
        </createTable>
        <modifySql dbms="mysql">
            <append value=" engine myisam DEFAULT CHARSET=utf8"/>
        </modifySql>
    </changeSet>

    <changeSet id="validation-02" author="Tommy Barker" dbms="mysql, h2">
        <createIndex tableName="validation_errors" indexName="idx_file_name_validation_errors">
            <column name="file_name"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>